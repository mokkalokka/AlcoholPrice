<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity">
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-8381692107773407/5994693757"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Calculate">

                </com.google.android.gms.ads.AdView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card1"
                    android:layout_width="341dp"
                    android:layout_height="198dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:animateLayoutChanges="false"
                    app:cardElevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar2">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Card1Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:paddingTop="8dp"
                            android:text="Beverage 1"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TableLayout
                            android:id="@+id/tableLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/Label_Alc1"
                                    android:layout_width="83dp"
                                    android:layout_height="wrap_content"
                                    android:text="Alc %"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/txtAlkoholProsent1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:hint="@string/Percent1"
                                    android:inputType="number|numberDecimal"
                                    android:textAlignment="textStart"
                                    android:theme="@style/EditTextTheme"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/Label_Volume1"
                                    android:layout_width="98dp"
                                    android:layout_height="wrap_content"
                                    android:text="Volume"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/txtVolum1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:hint="@string/Volume1"
                                    android:inputType="number|numberDecimal"
                                    android:textAlignment="textStart"
                                    android:theme="@style/EditTextTheme"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/Label_Price1"
                                    android:layout_width="126dp"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/txtPris1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number|numberDecimal"
                                    android:textAlignment="textStart"
                                    android:theme="@style/EditTextTheme"/>
                            </TableRow>
                        </TableLayout>
                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Card2"
                    android:layout_width="341dp"
                    android:layout_height="198dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Card2Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:paddingTop="8dp"
                            android:text="Beverage 2"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/Label_Alc2"
                                    android:layout_width="98dp"
                                    android:layout_height="wrap_content"
                                    android:text="Alc %"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/txtAlkoholProsent2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number|numberDecimal"
                                    android:textAlignment="textStart"
                                    android:theme="@style/EditTextTheme"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/Label_Volume2"
                                    android:layout_width="98dp"
                                    android:layout_height="wrap_content"
                                    android:text="Volume"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/txtVolum2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:hint="@string/Volume2"
                                    android:inputType="number|numberDecimal"
                                    android:textAlignment="textStart"
                                    android:theme="@style/EditTextTheme"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/Label_Price2"
                                    android:layout_width="126dp"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/txtPris2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number|numberDecimal"
                                    android:textAlignment="textStart"
                                    android:theme="@style/EditTextTheme"/>
                            </TableRow>
                        </TableLayout>
                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Compared to"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Card1" />

                <Button
                    android:id="@+id/Calculate"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="4dp"
                    android:onClick="onCalculate"
                    android:padding="10dp"
                    android:text="Calculate"
                    android:textColor="@color/cardview_light_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Card2" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:onClick="onInfo"
                    app:backgroundTint="@color/colorAccent"
                    app:elevation="6dp"
                    app:layout_anchor="@layout/toolbar"
                    app:layout_anchorGravity="bottom|end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_info_details" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="423dp"
                    android:layout_height="59dp"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="4dp"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="5dp"
                    android:text="Alcohol Price Comparison"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/toolbar2"
                    app:layout_constraintHorizontal_bias="0.056"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>